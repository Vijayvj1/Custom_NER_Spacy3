from Crypto.Cipher import AES
from Crypto.Util.Padding import pad, unpad
from Crypto.Random import get_random_bytes
import base64

def encrypt(plain_text, key):
    key = key.encode('utf-8')
    cipher = AES.new(key, AES.MODE_CBC, iv=get_random_bytes(16))
    encrypted = cipher.encrypt(pad(plain_text.encode('utf-8'), AES.block_size))
    combined = cipher.iv + encrypted
    return base64.b64encode(combined).decode('utf-8')

def decrypt(encrypted_text, key):
    key = key.encode('utf-8')
    combined = base64.b64decode(encrypted_text)
    iv = combined[:16]
    encrypted = combined[16:]
    cipher = AES.new(key, AES.MODE_CBC, iv)
    decrypted = unpad(cipher.decrypt(encrypted), AES.block_size)
    return decrypted.decode('utf-8')

# Example usage:
plain_text = "Hello, World!"
encryption_key = "YourEncryptionKe"

encrypted_text = encrypt(plain_text, encryption_key)
print(f"Encrypted Text: {encrypted_text}")

decrypted_text = decrypt(encrypted_text, encryption_key)
print(f"Decrypted Text: {decrypted_text}")
