import pandas as pd

# Define the input data
data = {
    'AP1': [80, 80, 20],
    'AP2': [10, 20, 30],
    'AP3': [60, 60, 60]
}

# Create a DataFrame from the input data
df = pd.DataFrame(data)

# Set the columns of input as index
df = df.set_index(pd.Index(['AP1', 'AP2', 'AP3']))

# Create an empty dictionary to store the frequency counts
freq_counts = {}

# Iterate over the columns of the DataFrame
for col in df.columns:
    # Count the frequency of each value in the column
    counts = df[col].value_counts().to_dict()
    freq_counts[col] = counts

# Create a new DataFrame from the frequency counts dictionary
output_df = pd.DataFrame.from_dict(freq_counts, orient='columns')

# Fill missing values with 0
output_df = output_df.fillna(0)

# Reorder the columns based on ascending order
output_df = output_df.reindex(sorted(output_df.columns), axis=1)

# Print the output DataFrame
print(output_df)

