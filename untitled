from collections import Counter

numbers = [3.4, 3.5, 3.6, 7.1, 7.2, 7.5]
rounded_numbers = [round(num) for num in numbers]

counts = Counter(rounded_numbers)
most_common = counts.most_common()

max_value = most_common[0][0]

filtered_numbers = [num for num in numbers if max_value-1 <= num <= max_value+0.5]

(filtered_numbers)
