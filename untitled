from collections import Counter

def find_most_frequent_mean(arr, target_range=0.5):
    rounded_arr = [round(num) for num in arr]
    counts = Counter(rounded_arr)
    max_count = max(counts.values())
    if max_count <= 1:
        print("No Frequent Items Found")
        arr_sort = sorted(arr)
        first_two_items = arr_sort[:2]
        mean_values = sum(first_two_items) / len(first_two_items)
        
    else:
        most_frequent_items = [num for num, count in counts.items() if count == max_count]
        
        indices = [i for i, num in enumerate(rounded_arr) if num in most_frequent_items]
        value_list_freq = [arr[i] for i in indices]
        mean_values = sum(value_list_freq)/len(value_list_freq)
    
    return mean_values

# Example usage
arr = [2,2.9,2,2.7,2.9]
result = find_most_frequent_mean(arr, target_range=0.5)
print(result)

