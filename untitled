import json
import pandas as pd
import re

def convert_json_to_csv(string_variable, output_csv_file):
    # Use regular expression to find and extract JSON objects from the input string
    json_objects_str = re.findall(r'\{.*?\}', string_variable)

    if not json_objects_str:
        print("No JSON objects found in the input string.")
        return

    # Parse JSON objects and create a list of dictionaries
    json_objects = [json.loads(obj) for obj in json_objects_str]

    # Create a DataFrame with consistent columns
    df = pd.DataFrame(json_objects)

    # Save DataFrame to a CSV file
    df.to_csv(output_csv_file, index=False)

# Example usage:
input_string = '{"name": "John", "age": 30} Some text {"name": "John1", "age": 30} Another text {"name": "John2", "age": 30}'
output_csv_file = "output.csv"

convert_json_to_csv(input_string, output_csv_file)

